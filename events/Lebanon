#Meeting jumblatt
country_event = {
    
	id = Leb.decision.1
	title = Leb.decision.1.t
	desc = Leb.decision.1.desc

	is_triggered_only = yes

	option = {
		name = Leb.decision.1.a
		log = "[GetDateText]: [This.GetName]: Leb.decision.1.a executed"		#Promise investment in druze regions
		add_to_variable = {
            var = lebanese_public_support
            value = 0.15
            tooltip = add_15_to_lebpublicsupport
        }
		add_to_variable = {
            var = syrian_infilitration_variable
            value = -0.05
            tooltip = remove_5_from_syrianinfilitration
        }
		add_country_flag = promised_investments_in_druze_regions              #will influence focus tree probably increasing costs and effects of investments
	}
	option = {
		name = Leb.decision.1.b
		log = "[GetDateText]: [This.GetName]: Leb.decision.1.b executed"		#Highlight syrian oppression of druze
		add_to_variable = {
            var = hariri_network_strength
            value = 0.15
            tooltip = add_15_to_lebharirinetworkstrength
        }
		add_to_variable = {
            var = syrian_infilitration_variable
            value = -0.1
            tooltip = remove_10_from_syrianinfilitration
        }
	}
	option = {
		name = Leb.decision.1.c
		log = "[GetDateText]: [This.GetName]: Leb.decision.1.c executed"		#Push him to break hezbollah ties
		add_to_variable = {
            var = hariri_network_strength
            value = 0.2
            tooltip = add_20_to_lebharirinetworkstrength
        }
		add_to_variable = {
            var = syrian_infilitration_variable
            value = -0.15
            tooltip = remove_15_from_syrianinfilitration
        }
	}
}
#Meeting geagea
country_event = {

	id = Leb.decision.2
	title = Leb.decision.2.t
	desc = Leb.decision.2.desc

	is_triggered_only = yes

	option = {
		name = Leb.decision.2.a
		log = "[GetDateText]: [This.GetName]: Leb.decision.2.a executed"		#Promise electoral reform (a tough bargain since large electoral representation not only benefitted syria but also hariri's sunni base. But doing this will give more bonuses in dealing with sectarianism)
		add_to_variable = {
            var = lebanese_public_support
            value = 0.20
            tooltip = add_20_to_lebpublicsupport
        }
		add_to_variable = {
            var = syrian_infilitration_variable
            value = -0.15
            tooltip = remove_15_from_syrianinfilitration
        }
		add_political_power = -60
		add_country_flag = promised_electoral_reforms              #will promise the parties to do the reform and when independent, thus the democratic tree will give more bonuses while choosing the other option will cause allied parties to oppose government
	}
	option = {
		name = Leb.decision.2.b
		log = "[GetDateText]: [This.GetName]: Leb.decision.2.b executed"		#Pledge to disarm hezbollah
		add_to_variable = {
            var = hariri_network_strength
            value = 0.15
            tooltip = add_15_to_lebharirinetworkstrength
        }
		add_to_variable = {
            var = syrian_infilitration_variable
            value = -0.1
            tooltip = remove_10_from_syrianinfilitration
        }
		add_country_flag = promised_to_disarm_hezbollah #Will promise the parties to tackle hezbollah. This will also increase the effectiveness of doing so through focuses and decisions when lebanon becomes independent
	}
	option = {
		name = Leb.decision.2.c
		log = "[GetDateText]: [This.GetName]: Leb.decision.2.c executed"		#Share intelligence on Syrian operations
		add_to_variable = {
            var = hariri_network_strength
            value = 0.2
            tooltip = add_20_to_lebharirinetworkstrength
        }
		add_to_variable = {
            var = syrian_infilitration_variable
            value = -0.15
            tooltip = remove_15_from_syrianinfilitration
        }
		add_country_flag = sharing_syrian_assasination_plots_with_geagea #Will decrease chances of political assasinations later
	}
}
#Meet berri
country_event = {

	id = Leb.decision.3
	title = Leb.decision.3.t
	desc = Leb.decision.3.desc

	is_triggered_only = yes

	option = {
		name = Leb.decision.3.a
		log = "[GetDateText]: [This.GetName]: Leb.decision.3.a executed"		#Channel reconstruction funds for the south
		add_to_variable = {
            var = lebanese_public_support
            value = 0.20
            tooltip = add_20_to_lebpublicsupport
        }
		add_to_variable = {
            var = syrian_infilitration_variable
            value = -0.10
            tooltip = remove_15_from_syrianinfilitration
        }
		add_political_power = -60
		add_country_flag = reconstruction_efforts_in_the_south           #Will channel funds for reconstruction of a southern district which will decrease shia radicalization and increase it's support
	}
	option = {
		name = Leb.decision.3.b
		log = "[GetDateText]: [This.GetName]: Leb.decision.2.b executed"		#Grant him a position as mediator
		add_to_variable = {
            var = hariri_network_strength
            value = 0.20
            tooltip = add_20_to_lebharirinetworkstrength
        }
		add_to_variable = {
            var = syrian_infilitration_variable
            value = -0.1
            tooltip = remove_10_from_syrianinfilitration
        }
	}
	option = {
		name = Leb.decision.3.c
		log = "[GetDateText]: [This.GetName]: Leb.decision.3.c executed"		#threaten to expose corruption
		add_to_variable = {
            var = hariri_network_strength
            value = 0.2
            tooltip = add_20_to_lebharirinetworkstrength
        }
		add_to_variable = {
            var = syrian_infilitration_variable
            value = -0.15
            tooltip = remove_15_from_syrianinfilitration
        }
		add_country_flag = berri_distrust       #amal movement will be distrustful and lead to increased shia radicalism and decreased support for government
	}
}

#Damascus's Dove
country_event = {

	id = Leb.storyevent.1
	title = Leb.storyevent.1.t
	desc = Leb.storyevent.1.desc

	is_triggered_only = yes

	option = {
		name = Leb.storyevent.1.a
		log = "[GetDateText]: [This.GetName]: Leb.storyevent.1.a executed"		#Send a trusted intermediary
		hidden_effect = {
		    country_event = {
				id = Leb.storyevent.11
				days = 1
			}
		}
	}
	option = {
		name = Leb.storyevent.1.b
		log = "[GetDateText]: [This.GetName]: Leb.storyevent.1.b executed"		#Refuse the meeting
		hidden_effect = {
		    country_event = {
				id = Leb.storyevent.12
				days = 10
			}
		}
	}
	option = {
		name = Leb.storyevent.1.c
		log = "[GetDateText]: [This.GetName]: Leb.storyevent.1.c executed"		#Test him by changing the location
		hidden_effect = {
		    country_event = {
				id = Leb.storyevent.13
				days = 2
			}
		}
	}
}

country_event = {

	id = Leb.storyevent.11
	title = Leb.storyevent.11.t
	desc = Leb.storyevent.11.desc

	is_triggered_only = yes

	option = {
		name = Leb.storyevent.11.a
		log = "[GetDateText]: [This.GetName]: Leb.storyevent.11.a executed"		#The intermediary dies
		add_to_variable = {
            var = hariri_network_strength
            value = -0.1
            tooltip = deduct_10_from_lebharirinetworkstrength
        }
		add_to_variable = {
            var = syrian_infilitration_variable
            value = 0.1
            tooltip = add_10_to_syrianinfilitration
        }
	}
}

