	is_triggered_only = yes

	option = {
		name = Leb.storyevent.25.a
		log = "[GetDateText]: [This.GetName]: Leb.storyevent.25.a executed"		
		add_to_variable = {
            var = syrian_infilitration_variable
            value = -0.1
            tooltip = remove_10_from_syrianinfilitration
        }
		add_to_variable = {
            var = lebanese_public_support
            value = 0.1
            tooltip = add_10_to_lebpublicsupport
        }
		add_stability = 0.1
	}
}

