#Fateful February
country_event = {

	id = Leb.storyevent.2
	title = Leb.storyevent.2.t
	desc = Leb.storyevent.2.desc

	is_triggered_only = yes

	option = {
		name = Leb.storyevent.2.a
		log = "[GetDateText]: [This.GetName]: Leb.storyevent.2.a executed"		#Go to the ground and disappear
		hidden_effect = {
		    country_event = { 
				id = Leb.storyevent.21
				days = 14
			}
		}
	}
	option = {
		name = Leb.storyevent.2.b
		log = "[GetDateText]: [This.GetName]: Leb.storyevent.2.b executed"		#Double the escort
		hidden_effect = {
		    country_event = { 
				id = Leb.storyevent.22
				days = 2
			}
		}
	}
	option = {
		name = Leb.storyevent.2.c
		log = "[GetDateText]: [This.GetName]: Leb.storyevent.2.c executed"		#Send a decoy
		hidden_effect = {
		    country_event = { 
				id = Leb.storyevent.23
				days = 2
			}
		}
		hidden_effect = {
		    country_event = { 
				id = Leb.storyevent.21
				days = 3
			}
		}
	}
}

#the route towards parliament
country_event = {

	id = Leb.storyevent.21
	title = Leb.storyevent.21.t
	desc = Leb.storyevent.21.desc

	is_triggered_only = yes

	option = {
		name = Leb.storyevent.21.a
		log = "[GetDateText]: [This.GetName]: Leb.storyevent.21.a executed"		#Take an underground circuitous route
		hidden_effect = {
		    country_event = { 
				id = Leb.storyevent.25
				days = 14
			}
		}
		if = {
		    limit = {
			    check_variable = {
					hariri_network_strength > 0.49
				}
			}
			hidden_effect = {
				country_event = { 
					id = Leb.storyevent.25
					days = 2
				}
			}
		}
		else = {
			hidden_effect = {
				country_event = { 
					id = Leb.storyevent.22
					days = 2
				}
			}
		}
	}
	option = {
		name = Leb.storyevent.21.b
		log = "[GetDateText]: [This.GetName]: Leb.storyevent.21.b executed"		#Announce taking the public corniche road
		hidden_effect = {
		    country_event = { 
				id = Leb.storyevent.24
				days = 10
			}
		}
		add_to_variable = {
            var = lebanese_public_support
            value = 0.1
            tooltip = add_10_to_lebpublicsupport
        }
	}
}

