#Meeting jumblatt
country_event = {
    
	id = Leb.decision.1
	title = Leb.decision.1.t
	desc = Leb.decision.1.desc

	is_triggered_only = yes

	option = {
		name = Leb.decision.1.a
		log = "[GetDateText]: [This.GetName]: Leb.decision.1.a executed"		#Promise investment in druze regions
		add_to_variable = {
            var = lebanese_public_support
            value = 0.15
            tooltip = add_15_to_lebpublicsupport
        }
		add_to_variable = {
            var = syrian_infilitration_variable
            value = -0.05
            tooltip = remove_5_from_syrianinfilitration
        }
		add_country_flag = promised_investments_in_druze_regions              #will influence focus tree probably increasing costs and effects of investments
	}
	option = {
		name = Leb.decision.1.b
		log = "[GetDateText]: [This.GetName]: Leb.decision.1.b executed"		#Highlight syrian oppression of druze
		add_to_variable = {
            var = hariri_network_strength
            value = 0.15
            tooltip = add_15_to_lebharirinetworkstrength
        }
		add_to_variable = {
            var = syrian_infilitration_variable
            value = -0.1
            tooltip = remove_10_from_syrianinfilitration
        }
		if = {
		    limit = { power_balance_value = { id = syrian_infilitration_variable value < -0.69 } }
			country_event = Leb.decision.4
		}
	}
	option = {
		name = Leb.decision.1.c
		log = "[GetDateText]: [This.GetName]: Leb.decision.1.c executed"		#Push him to break hezbollah ties
		add_to_variable = {
            var = hariri_network_strength
            value = 0.2
            tooltip = add_20_to_lebharirinetworkstrength
        }
		add_to_variable = {
            var = syrian_infilitration_variable
            value = -0.15
            tooltip = remove_15_from_syrianinfilitration
        }
		if = {
		    limit = { check_variable = { hariri_network_strength < 51 } }
			country_event = Leb.decision.5
		}
	}
}
