	default_state = "idle"
	state = { name = "idle" }
	state = { name = "move"	}
	
	state = { name = "attack"	animation = "attack" 
		event = { time = 0.5 node="muzzle" particle = "mg_muzzle_particle"  keep_particle = yes   light = "mg_muzzle_flash" sound = { soundeffect = infantry_mg_attack } } 
