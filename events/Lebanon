#the corniche public trip and a warning
country_event = {

	id = Leb.storyevent.24
	title = Leb.storyevent.24.t
	desc = Leb.storyevent.24.desc

	is_triggered_only = yes

	option = {
		name = Leb.storyevent.24.a
		log = "[GetDateText]: [This.GetName]: Leb.storyevent.24.a executed"		#Heed the warning and sever all ties with the hotel
		hidden_effect = {
		    country_event = { 
				id = Leb.storyevent.25
				days = 14
			}
		}
		add_to_variable = {
            var = hariri_network_strength
            value = -0.1
            tooltip = deduct_10_from_lebharirinetworkstrength
        }
	}
	option = {
		name = Leb.storyevent.24.b
		log = "[GetDateText]: [This.GetName]: Leb.storyevent.24.b executed"		#Defy them and have lunch there
		hidden_effect = {
		    country_event = { 
				id = Leb.storyevent.25
				days = 10
			}
		}
		hidden_effect = {
		    country_event = { 
				id = Leb.storyevent.26
				days = 1
			}
		}
	}
}

#the parliamentary vote is held and hariri survives
